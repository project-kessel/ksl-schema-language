    "version": "0.2.0",
    "configurations": [
    {
        "name": "Attach to Process",
        "type": "go",
        "request": "attach",
        "mode": "local",
        "processId": 0
    },
    {
        "type": "antlr-debug",
        "request": "launch",
        "name": "Debug Current Grammar",
        "grammar": "pkg/ksl/ksl.g4",
        "input": "samples/rbac.ksl",
    },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "bin/ksl",
            "args": ["-o", "combined.zed", "samples/rbac.ksl", "samples/inventory.ksl"]
        }
    ]
}